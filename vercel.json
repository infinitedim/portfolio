{
  "version": 2,
  "functions": {
    "packages/frontend/src/app/api/**/*.ts": {
      "runtime": "nodejs22.x",
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=(), payment=(), usb=(), bluetooth=()"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/portfolio/health"
    },
    {
      "source": "/healthz",
      "destination": "/api/portfolio/health"
    }
  ],
  "relatedProjects": [
    "packages/frontend",
    "packages/backend",
    "packages/ui",
    "tools/logger",
    "tools/trpc"
  ],
  "cleanUrls": true,
  "trailingSlash": false
}
