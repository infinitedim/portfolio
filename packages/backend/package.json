{
  "name": "@portfolio/backend",
  "version": "0.1.0",
  "private": true,
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./trpc/router": "./src/trpc/router.ts",
    "./trpc/context": "./src/trpc/context.ts",
    "./*": "./src/*.ts"
  },
  "scripts": {
    "start": "bun x nest start",
    "dev": "bun x nest start --watch",
    "build": "bun x nest build",
    "lint": "bun x eslint . --ext .ts",
    "lint:fix": "bun x eslint . --ext .ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "type-check": "bun x tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "hash-password": "bun run scripts/hash-password.ts",
    "prisma:generate": "bunx prisma generate",
    "prisma:migrate:dev": "bunx prisma migrate dev",
    "prisma:migrate:deploy": "bunx prisma migrate deploy",
    "prisma:migrate:status": "bunx prisma migrate status",
    "prisma:migrate:reset": "bunx prisma migrate reset",
    "prisma:studio": "bunx prisma studio",
    "prisma:db:push": "bunx prisma db push",
    "prisma:db:seed": "bunx prisma db seed",
    "db:setup": "bun run prisma:generate && bun run prisma:migrate:deploy"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.1",
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/throttler": "^6.5.0",
    "@portfolio/logger": "workspace:*",
    "@portfolio/trpc": "workspace:*",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.3.0",
    "@prisma/config": "^7.2.0",
    "@trpc/client": "^11.8.1",
    "@trpc/server": "^11.8.1",
    "@upstash/redis": "^1.35.8",
    "@vercel/node": "^5.5.16",
    "ai": "^6.0.3",
    "bcryptjs": "^3.0.3",
    "cache-manager": "^7.2.7",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "ipaddr.js": "^2.3.0",
    "jsonwebtoken": "^9.0.3",
    "nest-winston": "^1.10.2",
    "next": "^16.1.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "winston": "^3.19.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.14",
    "@nestjs/testing": "^11.1.9",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.7",
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "sanitize-html": "^2.17.0",
    "ts-node": "^10.9.2"
  }
}
