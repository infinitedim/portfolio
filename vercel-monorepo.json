{
  "version": 2,
  "name": "portfolio-monorepo",
  "builds": [
    {
      "src": "packages/frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/backend/(.*)",
      "dest": "/api/backend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/packages/frontend/$1"
    }
  ],
  "functions": {
    "packages/frontend/src/app/api/**/*.ts": {
      "runtime": "nodejs22.x",
      "maxDuration": 30
    },
    "packages/backend/api/**/*.ts": {
      "runtime": "nodejs22.x",
      "maxDuration": 10,
      "memory": 1536
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=(), payment=(), usb=(), bluetooth=()"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/portfolio/health"
    },
    {
      "source": "/healthz",
      "destination": "/api/portfolio/health"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "buildCommand": "cd ../.. && bun run build --filter=@portfolio/frontend",
  "outputDirectory": "packages/frontend/.next",
  "installCommand": "cd ../.. && bun install",
  "framework": "nextjs"
}
