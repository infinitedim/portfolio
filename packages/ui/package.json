{
  "name": "@portfolio/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun x tsc -p tsconfig.json",
    "lint": "bun x eslint . --ext .ts,.tsx",
    "lint:fix": "bun x eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "shadcn": "^3.5.1",
    "sonner": "^2.0.7"
  },
  "peerDependencies": {
    "tailwind-merge": "^3.4.0"
  }
}
