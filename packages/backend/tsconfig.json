{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist",
    "lib": [
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*",
      ],
      "@/backend/*": [
        "../backend/src/*"
      ],
      "@/ui/*": [
        "../ui/src/*"
      ]
    },
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": false,
    "noEmitOnError": false,
  },
  "exclude": [
    "dist/**/*",
  ],
  "include": [
    "src/**/*"
  ]
}
