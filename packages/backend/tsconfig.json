{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "esnext"
    ],
    "baseUrl": "./",
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": false,
    "noEmitOnError": false,
  },
  "exclude": [
    "dist/**/*",
  ],
  "include": [
    "src/**/*"
  ]
}