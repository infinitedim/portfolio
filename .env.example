# ==============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit the actual .env file with real values

# === BUILD-TIME VARIABLES ===
ANALYZE=false
NODE_ENV=development
NPM_PACKAGE_VERSION=0.0.1

# === AUTHENTICATION & SECURITY ===
SECRET_KEY=your_secret_key_64_characters_minimum_required_for_security
CUSTOM_KEY=your_custom_encryption_key_64_characters_minimum_required
JWT_SECRET=your_jwt_secret_minimum_64_characters_for_security_purposes
JWT_EXPIRES_IN=15m
REFRESH_TOKEN=your_refresh_token_secret_64_characters_minimum_required
REFRESH_TOKEN_EXPIRES_IN=7d
ADMIN_EMAIL=your_admin_email@example.com

# === PUBLIC RUNTIME VARIABLES ===
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_BASE_URL=http://127.0.0.1:3000
NEXT_PUBLIC_ROADMAP_AUTH_TOKEN=Bearer your_roadmap_auth_token
NEXT_PUBLIC_ROADMAP_USER_ID=your_roadmap_user_id

# === EXTERNAL SERVICES ===
FIREBASE_PROJECT_ID=your_firebase_project_id
GITHUB_TOKEN=github_pat_your_github_personal_access_token
GITHUB_USERNAME=your_github_username
VERCEL_URL=your_domain.vercel.app

# === ROADMAP SERVICE ===
ROADMAP_AUTH_TOKEN=Bearer your_server_side_roadmap_token
ROADMAP_USER_ID=your_roadmap_user_id

# === SPOTIFY INTEGRATION ===
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_CLIENT_ID=your_spotify_client_id

# === REDIS DATABASE ===
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# === AI SERVICES ===
PORTFOLIO_AI_KEY=your_portfolio_ai_service_key
OPENAI_API_KEY=sk-proj-your_openai_api_key
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# ==============================================
# JWT CONFIGURATION
# ==============================================
# JWT secrets (MUST be at least 32/64 characters for security)
# Generate with: openssl rand -hex 32
JWT_SECRET=your_super_secure_jwt_secret_at_least_64_characters_long_for_security
REFRESH_TOKEN_SECRET=your_super_secure_refresh_token_secret_at_least_64_characters_long

# JWT token expiration times
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# JWT metadata
JWT_ISSUER=portfolio-app
JWT_AUDIENCE=portfolio-users

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
# Admin user credentials
ADMIN_EMAIL=admin@yourdomain.com
# For production, use ADMIN_PASSWORD_HASH (bcrypt hash)
ADMIN_PASSWORD_HASH=$2b$12$example_bcrypt_hash_here
# For development only - plain text password
ADMIN_PASSWORD=your_admin_password_here

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Comma-separated list of allowed IP addresses (optional)
IP_ALLOW_LIST=127.0.0.1,::1

# CORS allowed origins
ALLOWED_ORIGINS=http://127.0.0.1:3000,http://localhost:3000
FRONTEND_ORIGIN=http://127.0.0.1:3000

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# API Security (optional)
PORTFOLIO_API_KEY=your_portfolio_api_key_at_least_32_chars

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Server port
PORT=4000

# Public application URLs
NEXT_PUBLIC_APP_URL=http://127.0.0.1:3000
NEXT_PUBLIC_SITE_NAME=Portfolio

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# Google Analytics tracking ID (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Contact information (optional)
NEXT_PUBLIC_CONTACT_EMAIL=contact@yourdomain.com
NEXT_PUBLIC_RESUME_URL=https://yourdomain.com/resume.pdf

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Logging level
LOG_LEVEL=info

# Sentry error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Bundle analysis
ANALYZE=false

# ==============================================
# SECURITY NOTES
# ==============================================
# 1. JWT_SECRET and REFRESH_TOKEN_SECRET should be different
# 2. Use strong, randomly generated secrets in production
# 3. Never use the same secrets across environments
# 4. Rotate secrets regularly in production
# 5. Use ADMIN_PASSWORD_HASH in production, not ADMIN_PASSWORD