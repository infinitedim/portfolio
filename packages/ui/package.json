{
  "name": "@portfolio/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun x tsc -p tsconfig.json",
    "lint": "bun x eslint . --ext .ts,.tsx",
    "lint:fix": "bun x eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "shadcn": "^2.10.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sonner": "^1.7.1"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^26.1.0",
    "vitest": "^3.2.4",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "typescript": "^5.7.2"
  }
}
