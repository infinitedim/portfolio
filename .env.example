# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control!

# Node Environment
NODE_ENV=development

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL database connection string
DATABASE_URL=postgresql://username:password@localhost:5432/portfolio_db
POSTGRES_PRISMA_URL=postgresql://username:password@localhost:5432/portfolio_db

# ==============================================
# REDIS CONFIGURATION
# ==============================================
# Upstash Redis configuration for caching/sessions
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token_here

# ==============================================
# JWT CONFIGURATION
# ==============================================
# JWT secrets (MUST be at least 32/64 characters for security)
# Generate with: openssl rand -hex 32
JWT_SECRET=your_super_secure_jwt_secret_at_least_64_characters_long_for_security
REFRESH_TOKEN_SECRET=your_super_secure_refresh_token_secret_at_least_64_characters_long

# JWT token expiration times
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# JWT metadata
JWT_ISSUER=portfolio-app
JWT_AUDIENCE=portfolio-users

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
# Admin user credentials
ADMIN_EMAIL=admin@yourdomain.com
# For production, use ADMIN_PASSWORD_HASH (bcrypt hash)
ADMIN_PASSWORD_HASH=$2b$12$example_bcrypt_hash_here
# For development only - plain text password
ADMIN_PASSWORD=your_admin_password_here

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# Comma-separated list of allowed IP addresses (optional)
IP_ALLOW_LIST=127.0.0.1,::1

# CORS allowed origins
ALLOWED_ORIGINS=http://127.0.0.1:3000,http://localhost:3000
FRONTEND_ORIGIN=http://127.0.0.1:3000

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# API Security (optional)
PORTFOLIO_API_KEY=your_portfolio_api_key_at_least_32_chars

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
# Server port
PORT=4000

# Public application URLs
NEXT_PUBLIC_APP_URL=http://127.0.0.1:3000
NEXT_PUBLIC_SITE_NAME=Portfolio

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# Google Analytics tracking ID (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Contact information (optional)
NEXT_PUBLIC_CONTACT_EMAIL=contact@yourdomain.com
NEXT_PUBLIC_RESUME_URL=https://yourdomain.com/resume.pdf

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Logging level
LOG_LEVEL=info

# Sentry error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================
# DEVELOPMENT CONFIGURATION
# ==============================================
# Bundle analysis
ANALYZE=false

# ==============================================
# SECURITY NOTES
# ==============================================
# 1. JWT_SECRET and REFRESH_TOKEN_SECRET should be different
# 2. Use strong, randomly generated secrets in production
# 3. Never use the same secrets across environments
# 4. Rotate secrets regularly in production
# 5. Use ADMIN_PASSWORD_HASH in production, not ADMIN_PASSWORD